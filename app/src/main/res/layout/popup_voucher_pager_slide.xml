<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".view.MapsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:text="Huowng quynh"
            android:textColor="@color/colorText"
            android:textSize="@dimen/h1">
        </TextView>

        <TextView
            android:id="@+id/tvNumberOfVoucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin"
            android:gravity="right"
            android:text="5"
            android:textColor="@color/colorText"
            android:textSize="@dimen/h1">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/tvRestaurantAddress"
        android:textSize="@dimen/h3"
        android:text="so 1 dai co viet"
        android:textColor="@color/colorText"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin"
        android:layout_height="wrap_content">

    </TextView>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pagerVoucher"
        android:background="#CFC8C8"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:layout_marginBottom="10dp"
        android:layout_height="350dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="horizontal">

        <ImageButton
            android:padding="5dp"
            android:id="@+id/btBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackground_Button"
            android:src="@drawable/bt_back">
        </ImageButton>

        <ImageButton
            android:id="@+id/btDirectionCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackground_Button"
            android:src="@drawable/bt_direction_car">

        </ImageButton>

        <ImageButton
            android:id="@+id/btDirectionBike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackground_Button"
            android:src="@drawable/bt_direction_bike">

        </ImageButton>

        <ImageButton
            android:id="@+id/btDirectionWalk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackground_Button"
            android:src="@drawable/bt_direction_walk">
        </ImageButton>
    </LinearLayout>

</LinearLayout>